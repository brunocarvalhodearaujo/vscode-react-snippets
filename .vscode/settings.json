{
  "workbench.iconTheme": "material-icon-theme",
  "files.autoSave": "onFocusChange",
  "workbench.editor.enablePreview": false,
  "explorer.openEditors.visible": 0,
  "debug.inlineValues": true,
  "javascript.validate.enable": false,
  "editor.minimap.enabled": false,
  "markdown.preview.fontFamily": "Consolas, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontFamily": "Consolas, Fira Code, Menlo, Monaco, 'Courier New', monospace",
  "jsannotations.fontStyle": "normal",
  "javascript.referencesCodeLens.enabled": true,
  "breadcrumbs.enabled": true,
  "workbench.editor.highlightModifiedTabs": true,
  "javascript.implicitProjectConfig.checkJs": true,
  "editor.rulers": [
    80,
    120
  ],
  "standard.options": {
    "plugins": [
      "flowtype"
    ],
    "ignore": [
      "node_modules/*"
    ],
    "parser": "babel-eslint",
    "envs": [
      "jest",
      "es6",
      "node",
      "browser"
    ],
    "globals": [
      "Partial",
      "ReturnType",
      "__DEV__",
      "ReactComponent",
      "ReactElement",
      "SyntheticEvent",
      "SyntheticClipboardEvent",
      "SyntheticCompositionEvent",
      "SyntheticInputEvent",
      "SyntheticUIEvent",
      "SyntheticFocusEvent",
      "SyntheticKeyboardEvent",
      "SyntheticMouseEvent",
      "SyntheticDragEvent",
      "SyntheticWheelEvent",
      "SyntheticTouchEvent",
      "CSSProperties"
    ]
  }
}
